drop table orders if exists;
CREATE table if NOT EXISTS orders(ID INT UNIQUE NOT NULL,EMAIL VARCHAR(45) NOT NULL UNIQUE,PASS VARCHAR(45) NOT NULL,PRIMARY KEY(EMAIL)) ;
