package controllers;

import java.io.BufferedReader;
import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

@WebServlet(description = "A controller for handling first registration page", urlPatterns = { "/clientReg" })
public class ClientRegController extends HttpServlet {
	private HttpSession session; 
	private String url="registrCl.jsp";
	//@SuppressWarnings("deprecation")
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		//get our current session
		session = request.getSession();
		StringBuilder sb = new StringBuilder();
	    BufferedReader br = request.getReader();
	    String str;
	    JSONObject jObj=null;
	    while( (str = br.readLine()) != null ){
	        sb.append(str);
	    }    
	    try {
			jObj = new JSONObject(sb.toString());
			JSONArray lang= jObj.getJSONArray("languages");
			lang.getJSONObject("target").;
			lang.get
			String src=jObj.get("theme").toString();
			String tar=jObj.get("type").toString();
			System.out.println(src+"  "+tar);
	    } catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		System.out.println(jObj);    
	    int i=0;
		//System.out.println(jsonValue);
		RequestDispatcher dispatcher = request.getRequestDispatcher(url);
		dispatcher.forward(request, response);
		
	}
	public ClientRegController() {
		// TODO Auto-generated constructor stub
		super();
	}
	
}
